/* pages/virtualShow/virtualShow.wxss */
/* 容器 */
.container {
    width: 750rpx;
    min-height: 100vh;
    height: 100%;
    background: #d9d5c5;
}

.virtual-show {
    height: 460rpx;
    box-sizing: border-box;
    padding: 50rpx 0;
    position: relative;
    z-index: 20;
}

.virtual-swiper {
    height: 360rpx;
    padding: 0 10rpx;
}

.virtual-swiper-item {
    height: 360rpx;
    left: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.swiper-item-box {
    width: 240rpx;
    height: 360rpx;
    max-width: 240rpx;
    position: relative;
}

.item-img {
    max-width: 95%;
    max-height: 95%;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}

.active {
    transform: scale(1.2);
    transition: ease-in;
}

/* 选项展示 */
.options-show {
    position: absolute;
    width: 650rpx;
    height: 160rpx;
    /* background-color: rgba(255, 255, 255, 1); */
    background: #d9d5c5;
    box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 20rpx;
    margin: -40rpx 50rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.option-btn {
    text-align: center;
}

.option-line {
    width: 2rpx;
    height: 100rpx;
    /* background: red; */
    background: rgba(0, 0, 0, 1);
    border-radius: 20rpx;
    opacity: 0.08;
}

.option-btn>image {
    width: 60rpx;
    height: 60rpx;
}

.option-font {
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(68, 68, 68, 1);
    line-height: 26rpx;
}

.show-content {
    margin-top: 180rpx;
    box-sizing: border-box;
    padding: 0 50rpx;
    position: relative;
    /* color: #333333; */
}

.show-title {
    font-size: 40rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    line-height: 40rpx;
}

.show-body {
    text-indent: 2em;
    margin-top: 30rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    /* color: rgba(51, 51, 51, 1); */
    color: #464646;
    line-height: 50rpx;
}

.red {
    color: #fd3e3e;
}
.option-footer{
    width: 650rpx;
    height: 160rpx;
    background: #d9d5c5;
    box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 20rpx;
    margin: 0 auto;
    margin-bottom: 50rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.show-option-view{
    vertical-align: middle;
    font-size: 26rpx;
}