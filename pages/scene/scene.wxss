/* pages/scene/scene.wxss */
.container{
  position: relative;
}
.bg{
  width: 100%;
  min-height: 100vh;
  position: absolute;
  top:0;
  left: 0;
  bottom: 0;
  z-index: -1;
  filter: blur(5px);
}
.scenes {
  padding: 1.5em 0;
}
.scene{
  margin: 1.5em;
  border-bottom: 1rpx solid #8b8b8b
}
.scene-header{
  font-size-adjust: 0.8;
  text-align: center;
  line-height: 1.5;
  margin: 0.5em auto;
}
.scene-synopsis {
  text-indent: 2em;
}
.collection-item {
  margin: 0.5em 0;
  text-align: center;
}